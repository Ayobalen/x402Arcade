{
  "name": "x402arcade",
  "private": true,
  "version": "0.1.0",
  "description": "Gasless arcade gaming on Cronos blockchain using x402 protocol",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev:frontend": "pnpm --dir packages/frontend dev",
    "dev:backend": "pnpm --dir packages/backend dev",
    "build:frontend": "pnpm --dir packages/frontend build",
    "build:backend": "pnpm --dir packages/backend build",
    "test:frontend": "pnpm --dir packages/frontend test",
    "test:backend": "pnpm --dir packages/backend test",
    "test:coverage:frontend": "pnpm --dir packages/frontend test:coverage",
    "test:coverage:backend": "pnpm --dir packages/backend test:coverage",
    "test:coverage": "pnpm test:coverage:frontend && pnpm test:coverage:backend",
    "coverage:badges": "node scripts/generate-coverage-badges.js",
    "test:all": "pnpm test:frontend && pnpm test:backend",
    "test:ci:frontend": "pnpm --dir packages/frontend test:ci",
    "test:ci:backend": "pnpm --dir packages/backend test:ci",
    "test:ci:all": "pnpm test:ci:frontend && pnpm test:ci:backend",
    "lint:frontend": "pnpm --dir packages/frontend lint",
    "lint:backend": "pnpm --dir packages/backend lint",
    "lint:all": "pnpm lint:frontend && pnpm lint:backend",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --fix --report-unused-disable-directives",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "prepare": "husky"
  },
  "keywords": [
    "cronos",
    "blockchain",
    "x402",
    "arcade",
    "gaming",
    "micropayments"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "husky": "^9.2.0",
    "@chromatic-com/storybook": "^5.0.0",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/addon-onboarding": "^10.2.0",
    "@storybook/addon-vitest": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.0.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.1",
    "prop-types": "^15.8.1",
    "storybook": "^10.2.0",
    "typescript-eslint": "^8.22.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --report-unused-disable-directives",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
