{
  /*
   * Docker Build TypeScript Configuration
   * Self-contained config for building in Docker without monorepo base.
   */
  "compilerOptions": {
    /* Output configuration */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Language & Environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type Checking - Strict mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Exports */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true,

    /* Backend-specific paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
