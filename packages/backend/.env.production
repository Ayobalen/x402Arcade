# Backend Production Environment Variables
# DO NOT commit actual values - use secrets management instead

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# CORS Configuration (set to actual frontend domain)
CORS_ORIGIN=https://x402arcade.com,https://www.x402arcade.com

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=/app/data/arcade.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600000

# =============================================================================
# Blockchain Configuration - Cronos Testnet
# =============================================================================
CHAIN_ID=338
RPC_URL=https://evm-t3.cronos.org
EXPLORER_URL=https://explorer.cronos.org/testnet

# Smart Contract Addresses
USDC_CONTRACT_ADDRESS=0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0
USDC_DECIMALS=6
USDC_DOMAIN_VERSION=1

# =============================================================================
# Arcade Wallet (CRITICAL - Use secrets management!)
# =============================================================================
# This wallet receives game payments and sends prize payouts
# NEVER commit actual values - set via environment variables or secrets
ARCADE_WALLET_ADDRESS=
ARCADE_PRIVATE_KEY=

# =============================================================================
# x402 Facilitator Configuration
# =============================================================================
FACILITATOR_URL=https://facilitator.cronoslabs.org
FACILITATOR_SETTLE_ENDPOINT=/v2/x402/settle
FACILITATOR_SUPPORTED_ENDPOINT=/v2/x402/supported

# =============================================================================
# Game Pricing (in USDC)
# =============================================================================
SNAKE_PRICE_USDC=0.01
PONG_PRICE_USDC=0.01
TETRIS_PRICE_USDC=0.02
BREAKOUT_PRICE_USDC=0.01
SPACE_INVADERS_PRICE_USDC=0.02

# =============================================================================
# Prize Pool Configuration
# =============================================================================
PRIZE_POOL_PERCENTAGE=70
PLATFORM_FEE_PERCENTAGE=30

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_EXPIRY_MINUTES=30
MAX_SESSIONS_PER_PLAYER=5

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PAYMENT_WINDOW_MS=60000
RATE_LIMIT_PAYMENT_MAX=10

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# Monitoring (optional)
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# =============================================================================
# Security
# =============================================================================
ENABLE_HELMET=true
TRUST_PROXY=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# Build Info
# =============================================================================
BUILD_TIME=
GIT_COMMIT=
VERSION=2.0.0
