          "name": "Play Snake (Get Payment Requirements)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This request intentionally returns 402 to show payment requirements",
                  "pm.test('Status code is 402 Payment Required', function() {",
                  "    pm.response.to.have.status(402);",
                  "});",
                  "",
                  "pm.test('X-Payment-Required header is present', function() {",
                  "    pm.response.to.have.header('x-payment-required');",
                  "});",
                  "",
                  "pm.test('Response contains payment info', function() {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.paymentInfo).to.be.an('object');",
                  "    pm.expect(jsonData.paymentInfo.amount).to.exist;",
                  "    pm.expect(jsonData.paymentInfo.recipient).to.exist;",
