# ============================================================================
# X402 ARCADE - BACKEND ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit your actual .env file to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------

# Node environment: development, production, or test
NODE_ENV=development

# Port the server will listen on
PORT=3001

# Host address (use 0.0.0.0 to listen on all interfaces in production)
HOST=localhost

# CORS allowed origin (frontend URL)
CORS_ORIGIN=http://localhost:5173

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------

# SQLite database file path (relative to backend root)
# Use :memory: for in-memory database (useful for testing)
DATABASE_PATH=./data/arcade.db

# ----------------------------------------------------------------------------
# Blockchain Configuration (Cronos)
# ----------------------------------------------------------------------------

# Chain ID: 25 for Cronos mainnet, 338 for Cronos testnet
CHAIN_ID=338

# RPC URL for blockchain interactions
# Cronos Mainnet: https://evm.cronos.org
# Cronos Testnet: https://evm-t3.cronos.org/
RPC_URL=https://evm-t3.cronos.org/

# Block explorer URL for transaction links
EXPLORER_URL=https://explorer.cronos.org/testnet

# ----------------------------------------------------------------------------
# USDC Contract Configuration
# ----------------------------------------------------------------------------

# USDC contract address on the target chain
# Testnet: 0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0
USDC_CONTRACT_ADDRESS=0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0

# USDC decimals (typically 6)
USDC_DECIMALS=6

# EIP-712 domain version for USDC permit signatures
USDC_DOMAIN_VERSION=1

# ----------------------------------------------------------------------------
# Arcade Wallet Configuration
# ----------------------------------------------------------------------------
# WARNING: Keep these credentials secure! Never commit to version control!

# Arcade wallet address that receives game payments and sends prizes
ARCADE_WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS

# Private key for the arcade wallet (for sending prize payouts)
# SECURITY: Use a hardware wallet or key management service in production
ARCADE_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# ----------------------------------------------------------------------------
# x402 Facilitator Configuration
# ----------------------------------------------------------------------------

# x402 facilitator service URL for payment verification
# Production: https://facilitator.cronoslabs.org
FACILITATOR_URL=https://facilitator.cronoslabs.org

# ----------------------------------------------------------------------------
# Game Configuration
# ----------------------------------------------------------------------------

# Price in USDC to play Snake (e.g., 0.01 = 1 cent)
SNAKE_PRICE_USDC=0.01

# Price in USDC to play Tetris (e.g., 0.02 = 2 cents)
TETRIS_PRICE_USDC=0.02

# Percentage of payments allocated to the prize pool (0-100)
PRIZE_POOL_PERCENTAGE=70

# Game session expiry time in minutes
SESSION_EXPIRY_MINUTES=30

# ----------------------------------------------------------------------------
# JWT/Session Configuration
# ----------------------------------------------------------------------------

# Secret key for signing JWT tokens (generate a strong random string!)
# Example: openssl rand -hex 32
JWT_SECRET=your-secure-secret-here-change-in-production

# JWT token expiry time in seconds (default: 1 hour)
JWT_EXPIRY_SECONDS=3600

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Silence all logs (useful for tests)
LOG_SILENCE=false

# ----------------------------------------------------------------------------
# Rate Limiting Configuration
# ----------------------------------------------------------------------------

# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit window duration in milliseconds
RATE_LIMIT_WINDOW_MS=60000
