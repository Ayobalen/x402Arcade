{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "x402arcade",
  "public": false,
  "framework": null,
  "buildCommand": "pnpm --dir packages/frontend build",
  "devCommand": "pnpm --dir packages/frontend dev",
  "installCommand": "pnpm install",
  "outputDirectory": "packages/frontend/dist",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD packages/frontend/",
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.x402arcade.com/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.x402arcade.com",
    "VITE_CHAIN_ID": "338",
    "VITE_RPC_URL": "https://evm-t3.cronos.org",
    "VITE_USDC_ADDRESS": "0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0"
  }
}
